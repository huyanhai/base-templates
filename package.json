{
  "name": "base",
  "version": "0.0.1",
  "packageManager": "pnpm@7.1.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "rm": "rm -rf node_modules **/*/node_modules",
    "lint": "Diff=$(git diff --cached --diff-filter=d --name-only -- '*.ts' '*.tsx' '*.js' '*.vue') && eslint --fix $Diff --ext .js,.ts,.vue,.tsx",
    "gen": "bash scripts/gen-pkg.sh",
    "clean:dist": "pnpm run -r --parallel clean:dist",
    "build": "pnpm run -r --parallel build",
    "pkg": "bash scripts/run-pkg.sh"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.21.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.34",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vue-tsc": "^1.8.27"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.2",
    "dayjs": "^1.11.10",
    "js-cookie": "^3.0.5",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "vitest": "^1.2.2",
    "vue": "^3.4.15",
    "vue-i18n": "^9.9.1",
    "vue-router": "^4.2.5"
  },
  "lint-staged": {
    "*.{less,sass}": [
      "stylelint --config  ./.stylelintrc --fix"
    ],
    "*.{ts,js,tsx}": [
      "npm run lint",
      "prettier --write"
    ]
  }
}
